@model SindicatoWeb.Models.Chofer

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle</h1>

<div>
    <h4>Chofer</h4>
    <hr />

    <div class="row">
        <div class="col-sm-4">
            @if (Model.Foto != null)
            {
                <img src="~/fotos/@Model.Foto" class="img-thumbnail" width="150px" />                
            }
        </div>
        <div class="col-sm-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ci)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ci)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreCompleto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Foto)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Volver</a>
</div>

<h3>Pago de Mesualidades</h3>
<hr/>
@{
    ViewData["ChoferId"] = Model.Id;
}

<div class="row">
    <div class="col-sm-4">
        <partial name="~/Views/Pagoes/Create.cshtml" model="new Pago()" view-data="ViewData"></partial>
    </div>
    <div class="col-sm-8">
        <partial name="~/Views/Pagoes/Index.cshtml" model="Model.Pagos"></partial>
    </div>
</div>



